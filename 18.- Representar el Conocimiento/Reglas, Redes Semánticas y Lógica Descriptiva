
def determinar_mayoria_de_edad(edad):
    if edad >= 18:
        return "Es mayor de edad."
    else:
        return "No es mayor de edad."

# Ejemplo de uso del sistema basado en reglas
edad = int(input("Por favor, ingrese su edad: "))
resultado = determinar_mayoria_de_edad(edad)
print(resultado)

red_semantica = {
    "Juan": {"Padre": "Carlos", "Madre": "Maria"},
    "Maria": {"Hermano": "Pedro", "Hermana": "Laura"}
}

# Ejemplo de consulta en la red semántica
persona = "Juan"
relacion = "Padre"
if relacion in red_semantica[persona]:
    print(f"{red_semantica[persona][relacion]} es el {relacion} de {persona}.")
else:
    print(f"No se encuentra la relación {relacion} para {persona}.")
    
