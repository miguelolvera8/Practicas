import random

# Simulación de lanzamiento de un dado
numero_dado = random.randint(1, 6)  # Genera un número aleatorio entre 1 y 6

# Evento de incertidumbre: el número del dado es desconocido
if numero_dado >= 1 and numero_dado <= 6:
    print(f"El número del dado es {numero_dado}. Este es un evento de incertidumbre.")

# Evento de certeza: sabemos exactamente qué número saldrá
numero_certeza = 3  # Supongamos que sabemos que el número será 3
print(f"El número del dado es {numero_certeza}. Este es un evento de certeza.")
